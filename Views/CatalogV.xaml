<UserControl x:Class="StoreCatalogWPF.Views.CatalogV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreCatalogWPF.Views"
             xmlns:TypeProduct="clr-namespace:StoreCatalogWPF.Models.Product.TypeProduct"
             xmlns:AudioEqupment="clr-namespace:StoreCatalogWPF.Models.Product.TypeProduct.AudioEqupments"
             xmlns:Phone_gadget="clr-namespace:StoreCatalogWPF.Models.Product.TypeProduct.Phone_gadgets"
             xmlns:PhotoVideoEquipment="clr-namespace:StoreCatalogWPF.Models.Product.TypeProduct.PhotoVideoEquipments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type AudioEqupment:AcousticHiFi}" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="1" Grid.Row="1" Content="xyz"/>
            </Grid>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeProduct:AudioEquipment}">
            <StackPanel DataContext="{Binding  }" >
                <ComboBox SelectedItem ="{Binding SelectedTypeAudio}">
                <ComboBoxItem>
                    <TextBlock Text="HiFi Acoustic"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="MusicCentre"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Radio"/>
                </ComboBoxItem>
            </ComboBox>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeProduct:PhotoVideoEquipment}">
            <Grid>
                <TextBlock Text="wqdefrj"/>
            </Grid>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeProduct:Phone_Phonegadget}">
            <Grid>
                <TextBlock Text="wqdefrj"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" Grid.Row="0" SelectedIndex="{Binding SelectedTypeProduct}" IsEditable="True" Margin="0,0,181,0" >
            <ComboBoxItem>
                <TextBlock Text="Audio Equipment"/>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock Text="Photo-Video Equipment"/>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock Text="Phone and Phonegadget"/>
            </ComboBoxItem>
        </ComboBox>
        <ContentPresenter  Grid.Column="1" Grid.Row="0" Content="{Binding ActualMapingTypeProduct}"/>
        <ContentPresenter Grid.Column="2" Grid.Row="0" Content="{Binding ActualMapingSubtypes}"/>
    </Grid>
</UserControl>
